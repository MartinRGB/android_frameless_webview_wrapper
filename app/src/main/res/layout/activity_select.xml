<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:onClick="selectWebView"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Select Project's Folder"/>

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:onClick="selectDefault"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Select Default Folder"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:lineHeight="20dp"
            android:text="·Default Folder Path: '/Download/Effect' \n \n·Double Finger Double Tap to refresh"/>

    </LinearLayout>


</RelativeLayout>